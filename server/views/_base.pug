doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css",
            rel="stylesheet",
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3",
            crossorigin="anonymous"
        )
        link(rel="stylesheet", href="/assets/css/orbit.css")
        title Document
        style.
            html,
            body {
                width: 100%;
                height: 100%;
                padding: 0;
                margin: 0;
            }
            body {
                display: flex;
                flex-direction: column;
            }
    body.bg-light
        header 
            nav.navbar.navbar-expand.navbar-light.bg-light
                .container-fluid
                    a.navbar-brand(href="#") Orbit Dashboard
                    button.navbar-toggler(
                        type="button",
                        data-bs-toggle="collapse",
                        data-bs-target="#navbarNav",
                        aria-controls="navbarNav",
                        aria-expanded="false",
                        aria-label="Toggle navigation"
                    )
                        span.navbar-toggler-icon
                    #topNav.collapse.navbar-collapse
                        ul.navbar-nav
                            li.nav-item
                                a#refresh-btn.nav-link(
                                    role="button",
                                    onclick="gOrbit.update()"
                                ) Refresh
                            li.nav-item
                                a#api-btn.nav-link(role="button", href="/get") DummyAPI(GET)
                            li.nav-item
                                a#add-btn.nav-link(
                                    role="button",
                                    onclick="fetch('/api/on');"
                                ) SERVER ON
                            li.nav-item
                                a#add-btn.nav-link(
                                    role="button",
                                    onclick="fetch('/api/off/200');"
                                ) SERVER OFF (200)
                            li.nav-item
                                a#add-btn.nav-link(
                                    role="button",
                                    onclick="fetch('/api/off/404');"
                                ) SERVER OFF (404)
                            li.nav-item
                                a#add-btn.nav-link(
                                    role="button",
                                    onclick="fetch('/api/off/500');"
                                ) SERVER OFF (500)

        block contents

        script(
            src="https://cdn.jsdelivr.net/npm/promise-polyfill@8.1/dist/polyfill.min.js"
        )
        script(
            src="https://cdn.jsdelivr.net/npm/whatwg-fetch@3.0/dist/fetch.umd.min.js"
        )
        script(src="/assets/js/orbit.js")

        block scripts
